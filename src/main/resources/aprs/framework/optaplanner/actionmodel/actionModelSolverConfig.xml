<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <!-- <environmentMode>FAST_ASSERT</environmentMode> -->

    <!-- Domain model configuration -->
    <solutionClass>aprs.framework.optaplanner.actionmodel.OpActionPlan</solutionClass>
    <entityClass>aprs.framework.optaplanner.actionmodel.OpAction</entityClass>

    <!-- Score configuration -->
    <scoreDirectorFactory>
        <easyScoreCalculatorClass>aprs.framework.optaplanner.actionmodel.score.EasyOpActionPlanScoreCalculator</easyScoreCalculatorClass>
    </scoreDirectorFactory>

    <!-- Optimization algorithms configuration -->
    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
    </constructionHeuristic>


    <localSearch>
        <termination>
            <unimprovedMillisecondsSpentLimit>300</unimprovedMillisecondsSpentLimit>
        </termination>
    </localSearch>

    
</solver>
